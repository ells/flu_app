<fieldset>
  <%= f.input :name, 
              :collection=> ["Cough", "Fever", "Headache", "Lethargy"], 
              label: "Symptom", 
              prompt: "Select a symptom",
              :input_html => { :class => "span3" }%>  
  <%= f.hidden_field :_destroy %>

  <%= f.input :duration, 
              :collection => 1..14, 
              label: "Duration",
              prompt: "How many days?" %>
  <%= f.hidden_field :_destroy %>
</fieldset>